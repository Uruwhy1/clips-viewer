{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:allow-read",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-app-meta-recursive",
    "fs:allow-app-meta",
    "fs:allow-app-write",
    "fs:allow-write-file",
    "fs:allow-read-text-file",
    "fs:allow-create",
    "fs:allow-write-text-file",
    "fs:allow-write",
    "core:app:allow-default-window-icon",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "E:/Clips/**" }, { "path": "*/**" }]
    }
  ]
}
